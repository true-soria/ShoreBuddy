<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorGenericText</item>
    </style>

    <style name="textLakeTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorGenericText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textFishList" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorGenericText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="widget_text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorGenericText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/rounded_square_white</item>
    </style>

    <style name="generic_text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorGenericText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textForDarkBG" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
